// font_rom.v is generated by gen_font_rom.rb, using font_rom.v.erb

module font_rom
(
  input [6:0] char,
  input [3:0] row,  // each character is 16 pixels high
  input [2:0] col,  // each character is  8 pixels wide
  output reg pixel
);

reg [0:7] line;

always @*
  case ({char, row})
    // Generated lines will be like: 12'h000: line = 8'b00000000;
    <%= gen_font_rom %>

    default: line = 8'b00000000;
  endcase

always @*
  pixel = line[col];

endmodule
